{%layout 'layout.liquid'%}
{%block title%}
{{comp.name}} - Penguin Comp
{%endblock%}


{%block content%}
<style>
    body{
        text-align: center;
    }
    .comp-pics{
        margin: auto;
    }
</style>
<div class='modal'>

    <div class='modal-content'>
        <img class='modal-img' src="#" alt="">
        <ul id='champ-stats'>
        </ul>
        <span class='close'>x</span>
    </div>
</div>
<h1>User Comp - {{comp.name}}</h1>
<a href='/comps/{{comp._id}}/edit'>Edit Team Comp</a><br/>
<a href='/comps'>Back to Index</a>
<div class="comp-pics">
<img class='one-champ' src="/assets/loading/{{comp.top}}_0.jpg" alt={{comp.top}}>
<img class='one-champ' src="/assets/loading/{{comp.jg}}_0.jpg" alt={{comp.jg}}>
<img class='one-champ' src="/assets/loading/{{comp.mid}}_0.jpg" alt={{comp.mid}}>
<img class='one-champ' src="/assets/loading/{{comp.adc}}_0.jpg" alt={{comp.adc}}>
<img class='one-champ' src="/assets/loading/{{comp.sup}}_0.jpg" alt={{comp.sup}}>
</div>
<ul>
    <li>poke: {{stats.poke}}</li>
    <li>engage: {{stats.engage}}</li>
    <li>disengage: {{stats.disengage}}</li>
    <li>skirmish: {{stats.skirmish}}</li>
    <li>teamfight: {{stats.teamfight}}</li>
    <li>splitPushing: {{stats.splitPushing}}</li>
    <li>earlyGame: {{stats.earlyGame}}</li>
    <li>scaling: {{stats.scaling}}</li>
    <li>utility: {{stats.utility}}</li>
    <li>dps: {{stats.dps}}</li>
    <li>burst: {{stats.burst}}</li>
    <li>tankiness: {{stats.tankiness}}</li>
    <li>mobility: {{stats.mobility}}</li>
</ul>
{%endblock%}